# command alias
alias dirs="dirs -v"
alias python="python3"
alias ll="ls -all"
alias agi="sudo apt-get -y install"
alias mv="mv -i"
alias rm="rm -i"
alias cp="cp -i"
alias c="pbcopy"
alias n="tmux new-window"
alias pwdc="pwd | tr -d "\n" | pbcopy"
alias -g G="|grep --color=auto"
alias cl="clear"
alias cls="clear && ls"
alias ssh="ssh -A"
alias lzd="lazydocker"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias ga="git add"
alias gc="git commit -m"
alias gst="git status"
alias gpo="git push origin"

alias tf="terraform"

#docker alias
alias dps="docker ps"
alias dimages="docker images"
alias dexec='docker exec -it $(docker ps | tail -n +2 | peco | cut -d " " -f 1) /bin/bash'
alias dstop='docker stop $(docker ps | tail -n +2 | peco | cut -d " " -f 1)'

#kubernetes alias
alias k="kubectl"
alias kgp="kubectl get pod"
alias kgn="kubectl get node"
alias kexec='kubectl exec -it $(kubectl get pod | tail -n +2 | peco | cut -d " " -f 1) /bin/bash'

alias cdf="find_cd"
alias vimf="find_vim"

alias emacs="vim"

# ls color
case "${OSTYPE}" in
darwin*)
  # Mac
  alias ls="ls -GF"
  ;;
linux*)
  # Linux
  alias ls='ls -F --color'
  ;;
esac

# arp-scan
case "${OSTYPE}" in
darwin*)
  # Mac
  alias lanip="sudo arp-scan -I en0 -l"
  ;;
linux*)
  # Linux
  alias lanip="sudo arp-scan -I enp31s0 -l"
  ;;
esac

# copy to clipboard
case "${OSTYPE}" in
darwin*)
  # Mac
  :
  ;;
linux*)
  # Linux
  alias pbcopy="xsel --clipboard --input"
  ;;
esac

# open command
case "${OSTYPE}" in
darwin*)
  # Mac
  :
  ;;
linux*)
  # Linux
  alias open="xdg-open"
  ;;
esac
