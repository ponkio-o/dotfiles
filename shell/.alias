# command alias
alias dirs="dirs -v"
alias python="python3"
alias ll="ls -all"
alias agi="sudo apt-get -y install"
alias mv="mv -i"
alias rm="rm -i"
alias c="pbcopy"
alias n="tmux new-window"
alias pwdc="pwd | tr -d "\n" | pbcopy"
alias -g G="|grep --color=auto"
alias cl="clear"
alias cls="clear && ls"
alias ssh="ssh -A"
alias lzd="lazydocker"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias ga="git add"
alias gc="git commit -m"
alias gst="git status"
alias gpo="git push origin"

alias dp="docker ps"
alias di="docker images"

alias emacs="vim"

# ls color
case "${OSTYPE}" in
darwin*)
  # Mac
  alias ls="ls -GF"
  ;;
linux*)
  # Linux
  alias ls='ls -F --color'
  ;;
esac

# arp-scan
case "${OSTYPE}" in
darwin*)
  # Mac
  alias lanip="sudo arp-scan -I en0 -l"
  ;;
linux*)
  # Linux
  alias lanip="sudo arp-scan -I enp31s0 -l"
  ;;
esac

# arp-scan
case "${OSTYPE}" in
darwin*)
  # Mac
  :
  ;;
linux*)
  # Linux
  alias pbcopy="xsel --clipboard --input"
  ;;
esac
