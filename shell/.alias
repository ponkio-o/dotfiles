# command alias
alias dirs="dirs -v"
alias python="python3"
alias ll="ls -all"
alias agi="sudo apt-get -y install"
alias mv="mv -i"
alias rm="rm -i"
alias c="pbcopy"
alias new="tmux new-window"
alias pwdc="pwd | tr -d "\n" | pbcopy"
alias -g G="|grep --color=auto"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias ga="git add"
alias gc="git commit"
alias gst="git status"
alias gpo="git push origin"

alias emacs="vim"

# ls color
case "${OSTYPE}" in
darwin*)
  # Mac
  alias ls="ls -GF"
  ;;
linux*)
  # Linux
  alias ls='ls -F --color'
  ;;
esac

# arp-scan
case "${OSTYPE}" in
darwin*)
  # Mac
  alias lanip="sudo arp-scan -I en0 -l"
  ;;
linux*)
  # Linux
  alias lanip="sudo arp-scan -I enp31s0 -l"
  ;;
esac
