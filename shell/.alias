# command alias
alias dirs="dirs -v"
alias ll="ls -all"
alias agi="sudo apt-get -y install"
alias mv="mv -i"
alias rm="rm -i"
alias cp="cp -i"
alias c="pbcopy"
alias pwdc="pwd | pbcopy"
alias -g G="| grep --color=auto"
alias -g L="| less -R"
alias ssh="ssh -A"
alias lzd="lazydocker"
alias myip="curl ifconfig.me"
alias mux='pgrep -vxq tmux > /dev/null && tmux new -d -s delete-me && tmux run-shell ~/.tmux/plugins/tmux-resurrect/scripts/restore.sh && tmux kill-session -t delete-me && tmux attach || tmux attach'
alias shfmt="shfmt -i 2 -ci -bn -s"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias g="git"
alias ga="git add"
alias gc="git commit -m"
alias gst="git status"
alias gpo="git push origin"

alias tf="terraform"

#docker alias
alias d="docker"
alias dps="docker ps"
alias dexec='docker exec -it $(docker ps | tail -n +2 | peco | cut -d " " -f 1) sh'
alias dstop='docker stop $(docker ps | tail -n +2 | peco | cut -d " " -f 1)'

#kubernetes alias
alias k="kubectl"
alias kgp="kubectl get pod"
alias kgn="kubectl get node"
alias kexec='kubectl iexec $(kubectl get pod | tail -n +2 | peco | cut -d " " -f 1)'

alias emacs="vim"
alias vim="nvim"

# ls color
case "${OSTYPE}" in
darwin*)
  # Mac
  alias ls="ls -GF"
  ;;
linux*)
  # Linux
  alias ls='ls -F --color'
  ;;
esac

# arp-scan
case "${OSTYPE}" in
darwin*)
  # Mac
  alias lanip="sudo arp-scan -I en0 -l"
  ;;
linux*)
  # Linux
  alias lanip="sudo arp-scan -I enp31s0 -l"
  ;;
esac

# copy to clipboard
case "${OSTYPE}" in
darwin*)
  # Mac
  :
  ;;
linux*)
  # Linux
  alias pbcopy="xsel --clipboard --input"
  ;;
esac

# open command
case "${OSTYPE}" in
darwin*)
  # Mac
  :
  ;;
linux*)
  # Linux
  alias open="xdg-open"
  ;;
esac
